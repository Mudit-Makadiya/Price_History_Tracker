<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Price History Tracker</title>
    <link rel="stylesheet" href="/css/products.css" />
  </head>
  <body>
    <div class="navbar">
      <h2><a href="/home" id="home">Home</a></h2>
      <h2><a href="/products/addProduct" id="addProduct">Click to add a product</a></h2>
    </div>
    <h1>All Products</h1>
    <table>
      <tr id="headRow">
        <th>product_id</th>
        <th>Product Name</th>
        <th>Description</th>
        <th>Source Image</th>
        <th>Actual Price</th>
        <th>Price Offered</th>
        <th>pe_id</th>
        <th>ce_id</th>
        <th>Edit Product</th>
        <th>Delete Product</th>
      </tr>
      <% for(let product of products) {%>
      <tr>
        <th><%= product.product_id %></th>
        <th><%= product.product_name %></th>
        <th><%= product.description %></th>
        <th><%= product.source_image %></th>
        <th><%= product.actual_price %></th>
        <th><%= product.price_offered %></th>
        <th><%= product.pe_id %></th>
        <th><%= product.ce_id %></th>
        <th>
          <a href="/products/editProduct/<%= product.product_id %> ">Edit</a>
        </th>
        <th>
          <form
            action="/products/deleteProduct/<%= product.product_id %>?_method=DELETE"
            method="post"
          >
            <button>Delete</button>
          </form>
        </th>
      </tr>
      <% } %>
    </table>
  </body>
</html>
