<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Price History Tracker</title>
    <link rel="stylesheet" href="/css/endUsers.css" />
  </head>
  <body>
    <div class="navbar">
      <h2><a href="/home" id="home">Home</a></h2>
      <h2><a href="/endUsers/addUser" id="addUser">Click to add a User</a></h2>
    </div>
    <h1>All Users</h1>
    <table>
      <tr id="headRow">
        <th>user_id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>User Name</th>
        <th>Email</th>
        <th>Date of Birth</th>
        <th>Password</th>
        <th>User Role</th>
        <th>Edit User</th>
        <th>Delete User</th>
      </tr>
      <% for(let user of users) {%>
      <tr>
        <th><%= user.user_id %></th>
        <th><%= user.first_name %></th>
        <th><%= user.last_name %></th>
        <th><%= user.user_name %></th>
        <th><%= user.email %></th>
        <th><%= user.date_of_birth %></th>
        <th><%= user.password %></th>
        <th><%= user.user_role %></th>
        <th><a href="/endUsers/editUser/<%= user.user_id %> ">Edit</a></th>
        <th>
          <form
            action="/endUsers/deleteUser/<%= user.user_id %>?_method=DELETE"
            method="POST"
          >
            <button>Delete</button>
          </form>
        </th>
      </tr>
      <% } %>
    </table>
  </body>
</html>
